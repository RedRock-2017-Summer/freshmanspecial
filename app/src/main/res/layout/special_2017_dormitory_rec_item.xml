<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@mipmap/item_divider"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/margin"
        app:cardCornerRadius="@dimen/radius">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/special_2017_dormitory_item_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/special_2017_dormitory_item_count_tv"
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@mipmap/dormitory_image_backgroud"
                android:drawableLeft="@mipmap/dormitory_image"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:textColor="#ffffff" />

        </FrameLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/special_2017_dormitory_item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:textSize="@dimen/size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/special_2017_frg_dormitory_item_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:textSize="@dimen/size_small" />

</LinearLayout>