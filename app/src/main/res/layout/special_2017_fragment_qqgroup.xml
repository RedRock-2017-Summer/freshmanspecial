<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <Button
                    android:id="@+id/special_2017_frg_qqgroup_search_bt"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin"
                    android:background="@mipmap/search" />

                <AutoCompleteTextView
                    android:id="@+id/special_2017_frg_qqgroup_actv"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:completionThreshold="1"
                    android:hint="请输入学院或地区" />


                <Button
                    android:id="@+id/special_2017_frg_qqgroup_cancel_bt"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin"
                    android:visibility="gone"
                    android:background="@mipmap/fork"/>

                <TextView
                    android:id="@+id/special_2017_frg_qqgroup_cancel_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="取消"
                    android:textColor="@color/lightBlue"
                    android:gravity="center"
                    android:textSize="@dimen/size_small"
                    android:visibility="gone"/>

            </LinearLayout>



        </android.support.v7.widget.CardView>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/special_2017_frg_qqgroup_result_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ScrollView>


</LinearLayout>