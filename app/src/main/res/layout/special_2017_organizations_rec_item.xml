<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin">

        <TextView
            android:id="@+id/special_2017_organizations_rec_item_resume_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_small"
            android:visibility="gone"
            android:layout_margin="@dimen/margin"/>

        <View
            android:id="@+id/special_2017_organizations_rec_item_v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/small_divider"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/special_2017_organizations_rec_item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size"
            android:textStyle="bold"
            android:layout_margin="@dimen/margin"/>

        <TextView
            android:id="@+id/special_2017_organizations_rec_item_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_small"
            android:layout_marginBottom="@dimen/margin"
            android:layout_margin="@dimen/margin"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/small_divider"/>

    </LinearLayout>

</LinearLayout>