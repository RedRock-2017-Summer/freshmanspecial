<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <Button
            android:id="@+id/special_2017_frg_most_difficult_sub_academic_bt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@mipmap/academy_search"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_margin="@dimen/margin"
            android:text="请选择学院"
            android:textSize="15dp" />



        <Button
            android:id="@+id/special_2017_frg_most_difficult_sub_major_bt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@mipmap/academy_search"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/margin"
            android:padding="10dp"
            android:text="请选择专业"
            android:textSize="15dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp">

        <com.mredrock.freshmanspecial.Utils.StatisticsView
            android:id="@+id/special_2017_frg_most_difficult_sub_stv"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>